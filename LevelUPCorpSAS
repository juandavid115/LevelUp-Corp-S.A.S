    <script>
        // Carrusel
        const carousel = document.getElementById('carousel-catalogos');
        if (carousel) {
            const images = carousel.querySelectorAll('img');
            const totalImages = images.length;
            let currentIndex = 0;

            function updateCarousel() {
                carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
            }

            const nextBtn = document.querySelector('.carousel-buttons .next-btn');
            const prevBtn = document.querySelector('.carousel-buttons .prev-btn');

            if (nextBtn) {
                nextBtn.addEventListener('click', () => {
                    currentIndex = (currentIndex + 1) % totalImages;
                    updateCarousel();
                });
            }

            if (prevBtn) {
                prevBtn.addEventListener('click', () => {
                    currentIndex = (currentIndex - 1 + totalImages) % totalImages;
                    updateCarousel();
                });
            }

            // Autoplay
            setInterval(() => {
                currentIndex = (currentIndex + 1) % totalImages;
                updateCarousel();
            }, 4000);
        }
    </script>
